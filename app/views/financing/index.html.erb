          <div class="row">
            <div class="input-field col s12 m6">
              <input id="trade_in_vehicle_year" type="number" name="contact[trade_in_vehicle_year]" class="validate">
              <label for="trade_in_vehicle_year">Trade-In Vehicle Year</label>
