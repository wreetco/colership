            <div class="input-field col s12 m6">
              <input id="down_payment_amount" type="number" name="contact[down_payment_amount]" class="validate">
              <label for="down_payment_amount">Down Payment Amount</label>
            </div>
          </div>

          <span class="card-title red-text darken-1">
            <h6>Trade-In Details</h6>
          </span>

          <div class="row">
            <div class="input-field col s12 m6">
              <input id="trade_in_vehicle_make" type="text" name="contact[trade_in_vehicle_make]" class="validate">
              <label for="trade_in_vehicle_make">Trade-In Vehicle Make</label>
