<div class="section">

  <div class="row" style="margin-bottom: 2.8em;">
    <div class="col s12 l12">
      <h2 class="center">Inventory</h2>
    </div>
  </div>


  <div class="row">
    
    <div class="row">
      <div class="col s12 m7">
        <div class="card">
          <div class="card-image">
            <img src="http://i.istockimg.com/file_thumbview_approve/22960889/6/stock-photo-22960889-suv-car-driving-forest-road-clipping-path-included.jpg">
            <span class="card-title"></span>
          </div>
          <div class="card-content">
            <p>
              <%= @cars[0].year %> <%= @cars[0].make %> <%= @cars[0].model %>
            </p>
          </div>
          <div class="card-action">
            <a href="<%= @cars[0].permalink %>">More Info!</a>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

